<h1>タスク一覧</h1>

<table>
    <thead>
        <tr>
            <th>タスク名</th>
            <th>説明</th>
        </tr>
    </thead>

    <tbody>
        <% @tasks.each do |task| %>
        <tr>
            <td><%= link_to task.title, task %></td>
            <td><%= task.description %></td>
            <td><%= button_to "edit", edit_task_path(task), method: :get %></td>
            <td><%= button_to "delete", task_path(task), method: :delete %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'New', new_task_path %>
